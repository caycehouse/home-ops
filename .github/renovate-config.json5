{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>caycehouse/renovate-config",
    "github>caycehouse/home-ops//.github/renovate/grafanaDashboards.json5",
    ":skipStatusChecks"
  ],
  "flux": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "helm"
      ],
      "matchPackagePatterns": [
        "rook.ceph"
      ],
      "groupName": "Rook Ceph",
      "separateMinorPatch": true
    }
  ]
}
