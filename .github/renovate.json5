{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>caycehouse/renovate-config",
    ":skipStatusChecks"
  ],
  "flux": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "lscr.io/linuxserver/calibre-web"
      ],
      "allowedVersions": "<1"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/mohamedbassem/hoarder-web",
        "ghcr.io/mohamedbassem/hoarder-workers"
      ],
      "groupName": "hoarder"
    }
  ]
}
