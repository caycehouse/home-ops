{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Loose versioning for non-semver containers",
      matchDatasources: ["docker", "github-releases"],
      matchPackageNames: ["/changedetection/", "/fabulously-optimized-server/"],
      versioning: "loose",
    },
    {
      description: "Regex versioning for hytale-server containers",
      matchDatasources: ["docker"],
      matchPackageNames: ["/hytale-server/"],
      versioning: "regex:^experimental-?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:\\.(?<build>\\d+))?$",
    },
  ],
}
